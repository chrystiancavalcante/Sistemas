<% include header %>
<br><br><br><br>
      <div class="container">
      <div class="jumbotron">
      <h2>Cálculo de Juros</h2>
      <br>
      <hr>
      <form method="GET">
        Valor inicial: <input type="text" class="form-control" name="valorInicial"><br>
        Taxa a.m.: <input type="text" class="form-control" name="taxa"><br>
        Quantos meses: <input type="text" class="form-control" name="tempo"><br>
        <hr>
        <button type="submit" class="btn btn-primary">Calcular</button>
      </form>
      </div>
      </div>
      <br>

      <% if(resultado.calculado){ %>
      
       <div class="container">
       <ul class="list-group">
      <li class="list-group-item list-group-item-info">
          <h2>Saldo Total</h2>
         <h1> R$ <%= resultado.total.toFixed(2) %></h1>
         <hr>

        <h3>Evolução</h3>
        <br>
        <table>
          <tr>
          <th>Mês</th>
          <th>Valor</th>
          </tr>
<% resultado.evolucao.forEach((valor) => { %>
          <tr>
          <td><%= valor.mes %></td>
          <td>R$ <%= valor.juros.toFixed(2) %></td>
          </tr>
          <% }) %>
        </table>
         </li>
        </ul>
        </div>

      <% } %>
      
      <br>
      <br><br>
<% include footer %>